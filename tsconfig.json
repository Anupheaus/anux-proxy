{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "importHelpers": false,
    "noEmit": true,
    "removeComments": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "ES6",
    "sourceMap": true,
    "lib": [
      "ESNext",
      "DOM",
    ],
  },
  "exclude": [
    "dist",
    "test"
  ]
}